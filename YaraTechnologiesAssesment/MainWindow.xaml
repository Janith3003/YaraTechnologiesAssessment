<Window x:Class="YaraTechnologiesAssesment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YaraTechnologiesAssesment"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <materialDesign:PackIcon Kind="ArrowLeftBoldCircle"  materialDesign:HintAssist.Hint="Exit" Height="35" Width="46" Margin="23,24,0,0" MouseDown="PackIcon_MouseDown" />
        <Label Content="Teachers Details" HorizontalAlignment="Center" Margin="0,53,0,0" VerticalAlignment="Top" Height="75" Width="354" HorizontalContentAlignment="Center" FontSize="40" FontWeight="Bold"/>
        <Button Content="Add Teacher" HorizontalAlignment="Center" Margin="0,184,0,0" VerticalAlignment="Top" Height="58" Width="144" FontWeight="Bold" Click="btn_add"/>
        <Button Content="View Teachers" HorizontalAlignment="Center" Margin="0,302,0,0" VerticalAlignment="Top" Height="58" Width="144" FontWeight="Bold" Click="btn_view"/>

    </Grid>
</Window>
